{
	"info": {
		"_postman_id": "sme-fin-backend-collection",
		"name": "SMEfin Backend API",
		"description": "API collection for SMEfin backend application",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": ["{{base_url}}"],
					"path": ["health"]
				}
			}
		},
		{
			"name": "Auth",
			"item": [
				{
					"name": "Send OTP",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/send-otp",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "send-otp"]
						}
					}
				},
				{
					"name": "Verify OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"auth_token\", jsonData.data.token);",
									"    pm.environment.set(\"user_id\", jsonData.data.user_id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"otp\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/verify-otp",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "verify-otp"]
						}
					}
				}
			]
		},
		{
			"name": "User",
			"item": [
				{
					"name": "Get Account Status",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/user/status",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "status"]
						}
					}
				},
				{
					"name": "Save Personal Details",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"full_name\": \"John Smith\",\n    \"email\": \"test@example.com\",\n    \"phone_number\": \"(100) 123456789\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/user/personal-details",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "personal-details"]
						}
					}
				},
				{
					"name": "Save Business Details",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"business_name\": \"ABC Trading Company\",\n    \"trade_license_number\": \"TL123456789\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/user/business-details",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "business-details"]
						}
					}
				},
				{
					"name": "Upload Trade License",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"filename\": \"license.pdf\",\n    \"file_url\": \"https://example.com/storage/license.pdf\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/user/trade-license",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "trade-license"]
						}
					}
				},
				{
					"name": "Save Full Registration (Personal + Business + Trade)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"personal\": {\n    \"full_name\": \"John Smith\",\n    \"email\": \"test@example.com\",\n    \"phone_number\": \"(100) 123456789\"\n  },\n  \"business\": {\n    \"business_name\": \"ABC Trading Company\",\n    \"trade_license_number\": \"TL123456789\"\n  },\n  \"trade\": {\n    \"filename\": \"license.pdf\",\n    \"file_url\": \"https://example.com/storage/license.pdf\"\n  }\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/user/full-registration",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "full-registration"]
						}
					}
				},
				{
					"name": "Submit Registration",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/user/submit",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "submit"]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "https://sm-efin-backend.vercel.app",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "",
			"type": "string"
		}
	]
}

