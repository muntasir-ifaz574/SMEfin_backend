									"type": "text"
								},
								{
									"key": "file_url",
									"value": "https://example.com/storage/license.pdf",
									"type": "text"
								},
								{
									"key": "file",
									"type": "file",
									"src": [],
									"description": "Optional: Upload file directly (alternative to file_url)"
								}
							]
						},
