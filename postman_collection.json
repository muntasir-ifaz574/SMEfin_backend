								},
								{
									"key": "personal[email]",
									"value": "test@example.com",
									"type": "text"
								},
								{
									"key": "personal[phone_number]",
									"value": "(100) 123456789",
									"type": "text"
								},
								{
									"key": "business[business_name]",
									"value": "ABC Trading Company",
									"type": "text"
								},
								{
									"key": "business[trade_license_number]",
									"value": "TL123456789",
									"type": "text"
								},
