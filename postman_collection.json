{
	"info": {
		"_postman_id": "sme-fin-backend-collection",
		"name": "SMEfin Backend API",
		"description": "API collection for SMEfin backend application",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": ["{{base_url}}"],
					"path": ["health"]
				}
			}
		},
		{
			"name": "Auth",
			"item": [
				{
					"name": "Send OTP",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "email",
									"value": "test@example.com",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/api/auth/send-otp",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "send-otp"]
						}
					}
				},
				{
					"name": "Verify OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"auth_token\", jsonData.data.token);",
									"    pm.environment.set(\"user_id\", jsonData.data.user_id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "email",
									"value": "test@example.com",
									"type": "text"
								},
								{
									"key": "otp",
									"value": "123456",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/api/auth/verify-otp",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "verify-otp"]
						}
					}
				}
			]
		},
		{
			"name": "User",
			"item": [
				{
					"name": "Get Account Status",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/user/status",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "status"]
						}
					}
				},
				{
					"name": "Save Personal Details",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}"
							}
						],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "full_name",
									"value": "John Smith",
